{
  "compilerOptions": {
    "target": "ES2019",
    "lib": ["ESNext", "ES2020"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "~/*": ["*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "tests"]
}
