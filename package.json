{
  "name": "bychance-api-server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "@hapi/hapi": "^20.1.2"
  },
  "devDependencies": {
    "@types/hapi__hapi": "^20.0.7",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.41",
    "jest": "^26.6.3",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.4"
  },
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn ./src/index.ts",
    "test": "jest"
  },
  "jest": {
    "testMatch": [
      "**/tests/**/*.ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "moduleNameMapper": {
      "~(.*)$": "<rootDir>/src/$1"
    }
  }
}
