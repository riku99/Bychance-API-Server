{
  "name": "bychance-api-server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "@hapi/basic": "^6.0.0",
    "@hapi/boom": "^9.1.2",
    "@hapi/hapi": "^20.1.2",
    "@now-ims/hapi-now-auth": "^2.0.3",
    "@prisma/client": "2.19.0",
    "axios": "^0.21.1",
    "crypto-js": "^4.0.0",
    "date-fns": "^2.21.1",
    "hapi-auth-bearer-token": "^8.0.0",
    "joi": "^17.4.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.0.1",
    "@types/hapi-auth-bearer-token": "^6.1.2",
    "@types/hapi__hapi": "^20.0.7",
    "@types/hapi__joi": "^17.1.6",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.41",
    "@types/node-fetch": "^2.5.10",
    "@types/uuid": "^8.3.0",
    "jest": "^26.6.3",
    "prisma": "2.19.0",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.4"
  },
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn ./src/index.ts",
    "dev:db:up": "docker-compose up -d",
    "test": "docker-compose -f docker-compose.test.yml run test_server yarn jest --forceExit",
    "test:db:up": "docker-compose -f docker-compose.test.yml up -d bc_mysql_test",
    "test:db:migrate": "docker-compose -f docker-compose.test.yml run test_server yarn prisma migrate reset --force",
    "test:db:gene": "docker-compose -f docker-compose.test.yml run test_server yarn prisma generate",
    "test:db:dev": "docker-compose -f docker-compose.test.yml run test_server npx prisma migrate dev --name update",
    "test:down": "docker-compose -f docker-compose.test.yml down --volumes",
    "test:ci": "yarn test:db:up && sleep 10 && yarn test:db:dev && yarn test:db:migrate && yarn test:db:gene && yarn test && yarn test:down",
    "db:seed": "ts-node --files -r tsconfig-paths/register ./src/db/seed.ts",
    "db:show": "yarn prisma studio"
  },
  "jest": {
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "moduleNameMapper": {
      "~(.*)$": "<rootDir>/src/$1"
    }
  }
}
